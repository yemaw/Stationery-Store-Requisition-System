<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblCollectionPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDepartment"
        android:layout_below="@+id/lblDepartment"
        android:text="Collection"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginTop="10sp"
        android:layout_marginBottom="0sp"
        />

    <TextView
        android:id="@+id/lblDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Dept"
        android:textSize="25dip"
        android:textColor="@color/midnight_blue"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lblRepresentative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Rep"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_marginRight="10sp"
        android:layout_marginTop="35sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblCollectionPoint"
        android:layout_below="@+id/lblCollectionPoint"
        android:text="" 
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

</RelativeLayout>
